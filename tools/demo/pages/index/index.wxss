:host {
    position: absolute;
    top: 0;
    bottom: 0;
    padding-bottom: env(safe-area-inset-bottom);
    display: flex;
    flex-direction: column;
}

.card {
    margin: 8px 10px 8px 10px;
    border-radius: 6px;
    box-shadow: 0px 3px 5px 0px rgba(0, 0, 0, 0.02), 0px -3px 5px 5px rgba(0, 0, 0, 0.01);
    display: flex;
    padding: 9px 9px 9px 9px;
}

.image {
    width: 80px;
    height: 80px;
    border-radius: 6px;
}

.content-container {
    margin-left: 16px;
    margin-right: 8px;
    display: flex;
    flex: 1;
    justify-content: space-between;
    align-items: center;
}

.title {
    font-size: 15px;
    font-weight: bold;
    color: #3d3d3d;
}

.subtitle {
    font-size: 12px;
    font-weight: normal;
    color: #afafaf;
}